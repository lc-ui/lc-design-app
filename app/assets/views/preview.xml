<?xml version="1.0" encoding="UTF-8" ?>
<lcui-app>
  <ui>
    <preview>
      <w class="container">
        <w class="row">
          <w class="col col-6">
            <w id="preview-messages" class="example">
              <h5>Message</h5>
            </w>
            <w id="preview-notifications" class="example">
              <h5>Notification</h5>
            </w>
            <w class="example">
              <h5>Alert</h5>
              <w class="alert alert-danger alert-dismissible">
                <text>Current version is too old. Please upgrade to Long Term Support version firstly</text>
                <button class="close" data-dismiss="alert">&#215;</button>
              </w>
              <w class="alert alert-primary">
                <w><strong>Changes in Service</strong></w>
                <text>We just updated our privacy policy here to better service our customers. We recommend reviewing the changes.</text>
              </w>
            </w>
          </w>
          <w class="col col-6">
            <w class="example">
              <h5>Button</h5>
              <w class="buttons-wrapper">
                <button class="btn btn-primary">Primary</button>
                <button class="btn">Default</button>
                <button class="btn btn-danger">Danger</button>
                <button class="btn btn-outline-primary">Outline</button>
              </w>
            </w>
            <w class="example">
              <h5>Checkbox</h5>
              <p>
                <checkbox checked="checked">Apple</checkbox>
                <checkbox>Pear</checkbox>
                <checkbox disabled="disabled" checked="checked">Orange</checkbox>
              </p>
            </w>
            <w class="example">
              <h5>Radio</h5>
              <p>
                <radio-group>
                  <radio value="small">Small</radio>
                  <radio value="medium" checked="checked">Medium</radio>
                  <radio value="large">Large</radio>
                  <radio value="xlarge" disabled="disabled">X-Large</radio>
                </radio-group>
              </p>
            </w>
            <w class="example">
              <h5>Switch</h5>
              <p>
                <switch checked="checked">Subscribe to weekly newsletter</switch>
              </p>
              <p>
                <switch disabled="disabled">Make my profile public</switch>
              </p>
            </w>
            <w class="row">
              <w class="col col-6">
                <w class="example">
                  <h5>Tooltip</h5>
                  <w class="buttons-wrapper">
                    <button class="btn" data-toggle="tooltip" data-placement="right" title="Upgrade this app">
                      Upgrade
                    </button>
                  </w>
                </w>
                <w class="example">
                  <h5>Dropdown</h5>
                  <w class="buttons-wrapper">
                    <w class="btn" data-toggle="dropdown" data-target="dropdown-example-1">
                      <text>Dropdown button</text>
                      <icon name="chevron-down" />
                    </w>
                  </w>
                  <dropdown-menu id="dropdown-example-1">
                    <text class="dropdown-item">Action</text>
                    <text class="dropdown-item">Another action</text>
                    <text class="dropdown-item">Something else here</text>
                  </dropdown-menu>
                </w>
              </w>
              <w class="col col-6">
                <w class="example">
                  <h5>Rate</h5>
                  <p>
                    <rate value="2" />
                  </p>
                  <p>
                    <rate character="6" value="3" count="6" />
                  </p>
                </w>
              </w>
            </w>
          </w>
        </w>
      </w>
    </preview>
  </ui>
</lcui-app>
